#!/usr/bin/env variant
# vi: ft=yaml

bindParamsFromEnv: true
autoenv: true

parameters:
  - name: CLOUDSDK_CORE_PROJECT
  - name: CLOUDSDK_COMPUTE_ZONE
  - name: CLOUDSDK_CONTAINER_CLUSTER
  - name: TOOLBOX_GCP_KEY_FILE
    default: .secrets/gcp.key.json
  - name: KUBECONFIG
    default: .secrets/kubeconfig

tasks:
  core:
    import: /toolbox/toolbox-variant/variant-lib/utils.yaml
  cloud:
    tasks:
      gcp:
        tasks:
          gcloud:
            import: /toolbox-gcp/variant-lib/utils.gcloud.yaml

  prepare:
    steps:
      - task: cloud.gcp.gcloud.init

  kubeconfig:
    steps:
      - task: prepare
        # Need to do one query to k8s to put token into kubeconfig file.
      - task: core.exec
        arguments:
          cmd: |
            kubectl get pods
